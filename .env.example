# Production Environment Configuration
# Copy this file to .env and update the values

# Application
SECRET_KEY=your-super-secret-key-here-change-this
DOMAIN_NAME=agritech.com
DEBUG=false
PROJECT_NAME=AgriTech Smart Bidding Platform
FRONTEND_URL=http://localhost:3000

# Database
POSTGRES_USER=agritech_user
POSTGRES_PASSWORD=secure-database-password
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agritech_db
DATABASE_URL=postgresql+asyncpg://agritech_user:secure-database-password@localhost:5432/agritech_db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=secure-redis-password

# Tokens & Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080
EMAIL_OTP_EXPIRE_SECONDS=300
JWT_SECRET_KEY=jwt-secret-key-change-this
ENCRYPTION_KEY=encryption-key-32-bytes-long

# Email Configuration
MAIL_SENDER_EMAIL=noreply@agritech.com
MAIL_SENDER_PASSWORD=your-smtp-app-password
MAIL_SENDER_HOST=smtp.gmail.com
MAIL_SENDER_PORT=587

# First Users
FIRST_SUPERUSER_EMAIL=admin@agritech.com
FIRST_SUPERUSER_PASSWORD=secure-admin-password
FIRST_SELLER_EMAIL=seller@agritech.com
FIRST_SELLER_PASSWORD=secure-seller-password
FIRST_REVIEWER_EMAIL=reviewer@agritech.com
FIRST_REVIEWER_PASSWORD=secure-reviewer-password

# CORS Origins
CORS_ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://agritech.com"]

# Monitoring
GRAFANA_PASSWORD=secure-grafana-password

# External Services
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=agritech-uploads

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Payment Gateway (if applicable)
PAYMENT_GATEWAY_API_KEY=your-payment-api-key
PAYMENT_GATEWAY_SECRET=your-payment-secret

# SMS Service (Twilio)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# ML/AI Settings
ML_ENABLED=true
MODEL_TRAINING_ENABLED=true
AUTO_BIDDING_ENABLED=true
